{
  "openapi": "3.0.0",
  "info": {
    "title": "Ignite Challenge 02 Documentation",
    "description": "This is an API Rest for Challenge 02 of Ignite's course.",
    "version": "1.0.0"
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["Users"],
        "summary": "Create user",
        "description": "Create a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "John Doe",
                  "email": "ask@me.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created"
          },
          "400": {
            "description": "User already exists"
          }
        }
      },
      "get": {
        "tags": ["Users"],
        "summary": "List users",
        "description": "List all users",
        "parameters": [{
          "in": "header",
          "name": "user_id",
          "schema": {
            "type": "string",
            "format": "uuid"
          },
          "required": "true"
        }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": ["Users"],
        "summary": "Turn user admin",
        "description": "Give admin rights to an user",
        "parameters": [{
          "in": "path",
          "name": "user_id",
          "schema": {
            "type": "string",
            "format": "uuid"
          },
          "required": "true"
        }],
        "responses": {
          "200": {
            "description": "Success"
          },
          "404": {
            "description": "User are not exists"
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": ["Users"],
        "summary": "See user",
        "description": "Get user details",
        "parameters": [{
          "in": "path",
          "name": "user_id",
          "schema": {
            "type": "string",
            "format": "uuid"
          },
          "required": "true"
        }],
        "responses": {
          "200": {
            "description": "Success"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    }
  }
}
